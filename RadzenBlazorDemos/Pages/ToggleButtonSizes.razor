@inject NotificationService NotificationService

<RadzenText TextStyle="TextStyle.Subtitle1" TagName="TagName.H3">Icon</RadzenText>
<RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="1rem" Wrap="FlexWrap.Wrap">
    <RadzenToggleButton Click=@(args => OnClick("Large icon button")) Icon="add" ButtonStyle="ButtonStyle.Primary" Size="ButtonSize.Large" />
    <RadzenToggleButton Click=@(args => OnClick("Medium icon button")) Icon="add" ButtonStyle="ButtonStyle.Primary" Size="ButtonSize.Medium" />
    <RadzenToggleButton Click=@(args => OnClick("Small icon button")) Icon="add" ButtonStyle="ButtonStyle.Primary" Size="ButtonSize.Small" />
    <RadzenToggleButton Click=@(args => OnClick("Extra Small icon button")) Icon="add" ButtonStyle="ButtonStyle.Primary" Size="ButtonSize.ExtraSmall" />
</RadzenStack>

<RadzenText TextStyle="TextStyle.Subtitle1" TagName="TagName.H3" class="rz-mt-4">Text</RadzenText>
<RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="1rem" Wrap="FlexWrap.Wrap">
    <RadzenToggleButton Click=@(args => OnClick("Large ToggleButton")) Text="Create" Size="ButtonSize.Large" />
    <RadzenToggleButton Click=@(args => OnClick("Medium ToggleButton")) Text="Create" Size="ButtonSize.Medium" />
    <RadzenToggleButton Click=@(args => OnClick("Small ToggleButton")) Text="Create" Size="ButtonSize.Small" />
    <RadzenToggleButton Click=@(args => OnClick("Extra Small ToggleButton")) Text="Create" Size="ButtonSize.ExtraSmall" />
</RadzenStack>

<RadzenText TextStyle="TextStyle.Subtitle1" TagName="TagName.H3" class="rz-mt-4">Icon and Text</RadzenText>
<RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="1rem" Wrap="FlexWrap.Wrap">
    <RadzenToggleButton Click=@(args => OnClick("Large button with text and icon")) Text="Create" Icon="add" ButtonStyle="ButtonStyle.Primary" Size="ButtonSize.Large" />
    <RadzenToggleButton Click=@(args => OnClick("Medium button with text and icon")) Text="Create" Icon="add" ButtonStyle="ButtonStyle.Primary" Size="ButtonSize.Medium" />
    <RadzenToggleButton Click=@(args => OnClick("Small button with text and icon")) Text="Create" Icon="add" ButtonStyle="ButtonStyle.Primary" Size="ButtonSize.Small" />
    <RadzenToggleButton Click=@(args => OnClick("Extra Small button with text and icon")) Text="Create" Icon="add" ButtonStyle="ButtonStyle.Primary" Size="ButtonSize.ExtraSmall" />
</RadzenStack>

@code {
    private void OnClick(string text)
    {
        NotificationService.Notify(new NotificationMessage { Severity = NotificationSeverity.Info, Summary = "ToggleButton Clicked", Detail = text });
    }
}